{% extends 'base.html.twig' %}

{% block body %}

    <h2>Add new ad</h2>

    {{ form_start(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.title) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.category) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactEmail, {'attr': {'value': app.user.email}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactName, {'attr': {'value': app.user.fullName}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactPhone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Add ad!</button>
            </div>
        </div>
        {{ form_row(form._token) }}

    {{ form_end(form) }}

{% endblock %}

