{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

        <h2>
            Edit ad <strong>{{ ad.title }}</strong>
        </h2>

        {{ form_start(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.title) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.category) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactEmail) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactName) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(form.contactPhone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit ad</button>
            </div>
        </div>
        {{ form_row(form._token) }}

        {{ form_end(form) }}

{% endblock %}

