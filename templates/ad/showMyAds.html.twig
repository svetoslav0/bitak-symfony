{% extends 'base.html.twig' %}

{% block body %}

    {% for ad in ads %}

        {% if ad.status.name == "STATUS_APPROVED" %}
            <h2>
                <a href="{{ path('show_ad', {id: ad.id}) }}">
                    {{ ad.title }}
                </a>
            </h2>
        {% else %}
            <h2>
                {{ ad.title }}
            </h2>
        {% endif %}
        <div>
            <strong>Category: </strong>
            <a href="{{ path('ads_in_category', {id: ad.category.id}) }}">
                {{ ad.category.name }}
            </a>
        </div>
        <p>{{ ad.description }}</p>
        <div>
            <strong>
                Status: {{ ad.status.name }}
            </strong>
        </div>
        <button class="btn btn-info">
            Edit
        </button>

        <!-- Delete button trigger modal -->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
            Delete
        </button>

        <!-- Delete Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            About to delete <strong>{{ ad.title }}</strong>
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to do this? The ad will not be actually deleted,
                        but will not be visible anymore.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <a href="{{ path('delete_ad', {id: ad.id}) }}" type="button" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        <hr />

    {% endfor %}

{% endblock %}

{% block title %}

{% endblock %}

